    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.ChangePasswordActivity"></activity>
        <activity android:name=".Activity.EditCustomerInfoActivity" />
        <activity android:name=".Activity.LoginActivity2" />
        <activity android:name=".Activity.RegistrationActivity2" />
        <activity android:name=".Activity.MedicineShop.SubCategoryActivity" />
        <activity android:name=".Activity.MedicineShop.SingleProductActivity" />
        <activity android:name=".Activity.MedicineShop.SingleMedicineOrderStatusActivity" />
        <activity android:name=".Activity.MedicineShop.AllMedicineOrderHistoryActivity" />
        <activity android:name=".Activity.MedicineShop.MedicineCheckoutActivity" />
        <activity android:name=".Activity.MedicineShop.ProductActivity" />
        <activity android:name=".Activity.MedicineShop.MedicineCartActivity" />
        <activity android:name=".Activity.MedicineShop.HotDealsActivity" />
        <activity android:name=".Activity.MedicineShop.LatestProductActivity" />
        <activity android:name=".Activity.MedicineShop.MedicineHomeActivity" />
        <activity android:name=".Activity.Diagnostic.UploadPrescriptionActivity" />
        <activity android:name=".Activity.SingleBookStatusActivity" />
